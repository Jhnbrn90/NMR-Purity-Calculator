{
  "name": "NMRPurityCalculator",
  "author": {
    "name": "John Braun",
    "email": "john@brn.email"
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/Jhnbrn90/NMR-Purity-Calculator"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "publish:osx": "yarn electron:build -p always",
    "publish:win": "yarn electron:build -- --win  --x64 --ia32 -p always",
    "publish:linux": "yarn electron:build -- --linux -p always",
    "publish:all": "yarn run publish:osx && yarn run publish:win && yarn run publish:linux",
    "build:osx": "yarn electron:build -p never",
    "build:win": "yarn electron:build -p never -- --win  --x64 --ia32",
    "build:linux": "yarn electron:build -p never -- --linux",
    "build:all": "yarn run build:osx && yarn run build:win && yarn run build:linux"
  },
  "main": "background.js",
  "dependencies": {
    "electron-updater": "^4.3.5",
    "npm": "^6.14.6",
    "vue": "^2.6.11",
    "vue-js-modal": "^1.3.33"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "electron": "^9.0.0",
    "electron-devtools-installer": "^3.1.0",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-template-compiler": "^2.6.11"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
